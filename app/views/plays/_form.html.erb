<% if @play.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@play.errors.count, "error") %> prohibited this game play from being saved:</h2>
 
    <ul>
    <% @play.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@game, @play] do |f| %>
    <%= f.label :minutes_played %>
    <%= f.text_field :minutes_played %>
    <%= f.label :winner %>
    <%= f.text_field :winner, placeholder: "Enter 'tie:' first if a tie" %>
    <%= f.hidden_field :game_id, value: params["game_id"] %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit %>
<% end %>