<%= form_for @game do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %></br>
    <%= f.label :min_play_time %>
    <%= f.text_field :min_play_time %>
    <%= f.label :max_play_time %>
    <%= f.text_field :max_play_time %></br>
    <%= f.label :min_num_players %>
    <%= f.text_field :min_num_players %>
    <%= f.label :max_num_players %>
    <%= f.text_field :max_num_players %></br>
    <%= f.label :min_age %>
    <%= f.text_field :min_age %>
    <%= f.label :max_age %>
    <%= f.text_field :max_age %></br>
    <%= f.label :categories %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %></br>
    <%= f.fields_for :categories, @game.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %></br>
    <%= f.label :mechanisms %>
    <%= f.collection_check_boxes(:mechanism_ids, Mechanism.all, :id, :name) %></br>
    <%= f.fields_for :mechanisms, @game.mechanisms.build do |mechanisms_fields| %>
        <%= mechanisms_fields.text_field :name %>
    <% end %></br>
    <%= f.submit %>
<% end %>
