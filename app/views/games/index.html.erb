<h1>All Games</h1>

<% if @kf == true %>
    <h2>Kid Friendly!</h2>
    <div><%= button_to "See All Games", games_path, method: "get" %></div>
<% else %>
    <div><%= button_to "See All Kid Friendly Games", game_kid_friendly_path(@games.first), method: "get" %></div>
<% end %>

<% @games.each do |game| %>
    <div><%= link_to game.name, game_path(game) %></div>
<% end %>

<div><%= button_to "Add a New Game", new_game_path, method: "get" %></div>

