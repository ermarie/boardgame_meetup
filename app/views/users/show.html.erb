
<h1><%= @user.name %></h1>

<% if @user == current_user %>
    <% if !@user.groups.empty? %>
        <h3>Your Groups are:</h3>
        <% @user.groups.each do |group| %>
            <%= link_to group.name, group_path(group) %></br>
        <% end %>
    <% end %>
    <div>
        <%= button_to "Create a New Group", new_group_path %>
    </div>
    <div>
        <%= button_to "See All Groups", groups_path %>
    </div>

    <% if !@user.events.empty? %>
        
        <h4>Your Events are:</h4>
        <% @user.groups.each do |group| %>
            <% group.events.each do |event| %>
                <%= link_to event.name, group_event_path(event) %>
                </br>
            <% end %>
        <% end %>
    <% end %>
<% end %>

<% if !@user.games.empty? %>
    <h4>Games:</h4>
    <% @user.games.each do |game| %>
        <%= link_to game.name, game_path(game) %>
    <% end %>
<% end %>